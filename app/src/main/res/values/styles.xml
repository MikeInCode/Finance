<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryGreen</item>
        <item name="colorPrimaryDark">@color/primaryGreen</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="ExchangeKeyboard">
        <item name="android:background">@drawable/style_button_keyboard</item>
        <item name="android:textColor">@drawable/text_button_changer</item>
        <item name="android:textSize">20sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ReadMoreButton">
        <item name="android:background">@drawable/style_button_read_more</item>
        <item name="android:textColor">@drawable/text_button_changer</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>
